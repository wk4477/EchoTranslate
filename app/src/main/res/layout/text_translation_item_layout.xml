<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_94sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/txt_translation_bg">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/language_title"
            style="@style/language_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/english"
            android:layout_marginStart="@dimen/_9sdp"
            app:layout_goneMarginTop="@dimen/_6sdp"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/speak_one"
            style="@style/clear_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speak_icon"
            android:layout_marginTop="@dimen/_3sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/clear"
            android:layout_marginEnd="@dimen/_9sdp"
            app:layout_goneMarginTop="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/voice_text"
            style="@style/voice_empty_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:ellipsize="marquee"
            android:gravity="start"
            android:maxLines="3"
            android:text="aaaaaaaaaaaaaaa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/language_title"
            app:layout_constraintVertical_bias="0.0"
            app:layout_goneMarginTop="@dimen/_6sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_111sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@+id/contr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/txt_translation_bg">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/sec_language_title"
            style="@style/language_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/english"
            android:layout_marginStart="@dimen/_9sdp"
            app:layout_goneMarginTop="@dimen/_6sdp"
            app:layout_constraintStart_toStartOf="parent"
            />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/sec_voice_text"
            style="@style/voice_empty_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:ellipsize="marquee"
            android:gravity="start"
            android:maxLines="3"
            android:text="aaaaaaaaaaaaaaa"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sec_language_title"
            app:layout_constraintVertical_bias="0.0"
            app:layout_goneMarginTop="@dimen/_6sdp" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            app:dividerColor="@color/white"
            android:layout_marginHorizontal="@dimen/_3sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_8sdp"
            app:layout_constraintBottom_toTopOf="@+id/speak_voice_text"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/speak_voice_text"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            app:layout_constraintEnd_toStartOf="@+id/copy_voice_text"
            app:layout_constraintTop_toTopOf="@+id/copy_voice_text"
            android:src="@drawable/voice_icon"
            app:layout_constraintBottom_toBottomOf="@+id/copy_voice_text"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/clear"
            style="@style/clear_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            android:text="@string/clear"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/copy_voice_text"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            android:src="@drawable/content_copy_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>